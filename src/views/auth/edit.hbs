<!-- Formulario de Registro -->
<div class="container p-4">
    <h5>Editar Usuario</h5>
    <form action="/edit/{{usuarios.id}}" method="POST">
        <div class="mb-3 row">
            <label for="fullname" class="form-label col-sm-3">Nombre Completo</label>
            <div class="col-sm-9">
                <input type="text" value="{{usuarios.nombre}}" class="form-control" id="nombre" name="nombre" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="username" class="form-label col-sm-3">Username</label>
            <div class="col-sm-9">
                <input type="text" value="{{usuarios.username}}" class="form-control" id="username" name="username" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="password" class="form-label col-sm-3">Password</label>
            <div class="col-sm-9">
                <input type="password" value="{{usuarios.password}}" class="form-control" id="password" name="password" required>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>
</div>
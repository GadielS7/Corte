            <ul class="navbar-nav"> <!-- Nueva lista para el dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white fs-4" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {{user.username}}
